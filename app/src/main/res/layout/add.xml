<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="일기 추가"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etMonth"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etTitle"
        android:layout_alignTop="@+id/etDay"
        android:ems="10"
        android:gravity="center"
        android:hint="월"
        android:inputType="number" />

    <EditText
        android:id="@+id/etDay"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/etPlace"
        android:layout_marginStart="108dp"
        android:ems="10"
        android:gravity="center"
        android:hint="일"
        android:inputType="number" />

    <EditText
        android:id="@+id/etPlace"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etContent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="장소"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etContent"
        android:layout_alignStart="@+id/etContent"
        android:layout_marginBottom="-155dp"
        android:ems="10"
        android:hint="제목"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etContent"
        android:layout_width="323dp"
        android:layout_height="167dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:ems="10"
        android:hint="내용"
        android:inputType="textPersonName"
        android:scrollHorizontally="true"
        android:singleLine="false" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="65dp"
        android:background="@android:color/holo_green_light"
        android:text="추가" />

    <Button
        android:id="@+id/btCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btAdd"
        android:layout_marginEnd="66dp"
        android:text="취소" />

    <EditText
        android:id="@+id/etHappy"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etContent"
        android:layout_alignTop="@+id/etTitle"
        android:ems="10"
        android:hint="행복지수"
        android:inputType="number" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp"
        android:layout_marginStart="83dp"
        app:srcCompat="@android:drawable/btn_dialog" />

    <Button
        android:id="@+id/btn_im"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/etPlace"
        android:background="#545f3e"
        android:onClick="onClick"
        android:text="이미지추가"
        android:textColor="@android:color/background_light" />

</RelativeLayout>